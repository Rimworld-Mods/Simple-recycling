    <uiIconThing>Leather_Bluefur</uiIconThing>
    <specialProducts>
      <li>Smelted</li>
    </specialProducts>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Apparel</li>
          </categories>
        </filter>
        <count>1</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
