<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<Operation Class="PatchOperationConditional">
		<success>Always</success>
		<xpath>Defs/RecipeDef[defName="NeolithicRecycleApparel"]</xpath>
		<match Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>
				<MicroDesignations.NeolithicRecipeJobDef>
					<defName>DoNeolithicSimpleRecycle</defName>
					<!--<defName>RecipeJobNeolithicRecycle</defName>-->
				</MicroDesignations.NeolithicRecipeJobDef>
			</value>
		</match>
		<nomatch Class="PatchOperationTest">
			<xpath>*/ThingDef[defName = "MealSurvivalPack"]</xpath>
			<success>Always</success>
		</nomatch>
	</Operation>

	<Operation Class="PatchOperationConditional">
		<success>Always</success>
		<xpath>Defs/RecipeDef[defName="RecycleApparel"]</xpath>
		<match Class="PatchOperationAdd">
			<xpath>Defs</xpath>
			<value>
				<MicroDesignations.SimpleRecipeJobDef>
					<defName>DoSimpleRecycle</defName>
					<!--<defName>RecipeJobSimpleRecycle</defName>-->
				</MicroDesignations.SimpleRecipeJobDef>
			</value>
		</match>
		<nomatch Class="PatchOperationTest">
			<xpath>*/ThingDef[defName = "MealSurvivalPack"]</xpath>
			<success>Always</success>
		</nomatch>
	</Operation>

</Patch>