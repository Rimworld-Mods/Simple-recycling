<?xml version="1.0" encoding="utf-8" ?>
<Patch>

	<!-- Rimsenal - Core add Japanese Translation patch -->

	<Operation Class="PatchOperationFindMod">
		<success>Always</success>
		<mods>
			<!-- Check Mod name or workshop ID written in PublishedFileId.txt (Confirm existence of other Mod from this Mod) -->
			<li>Rimsenal - Core 日本語翻訳追加</li>
			<li>1543729268</li>
		</mods>
		<match Class="PatchOperationAdd">
			<success>Always</success>
			<!-- Large Tailoring Table -->
			<xpath>*/RecipeDef[defName="NeolithicRecycleApparel"]/fixedIngredientFilter/disallowedCategories</xpath>
			<value>
				<li>RSCoreGears</li>
			</value>
		</match>
		<nomatch Class="PatchOperationTest">
			<success>Always</success>
			<xpath>*/ThingDef[defName = "MealSurvivalPack"]</xpath>
		</nomatch>
	</Operation>

</Patch>